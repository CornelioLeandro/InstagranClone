<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register.presentation.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:src="@drawable/photo_icon" />

    <TextView
        style="@style/InstaTextViewBaseForm"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:text="@string/photo_register_title" />

    <TextView
        style="@style/InstaTextViewBaseForm"
        android:layout_gravity="center"
        android:text="@string/photo_register_subtitle" />

    <com.leandro.instagram.login.presentation.LoadingButton
        android:id="@+id/register_button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/add_photo" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/instaFormButton.Link"
        android:id="@+id/register_button_jump"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        android:text="@string/jump"/>

</LinearLayout>