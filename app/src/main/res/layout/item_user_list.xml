<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_search_imageview_user"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_insta_profile_thin"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/grayBorder"
        app:civ_circle_background_color="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main_search_text_view_username"
        style="@style/InstaTextViewBase"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"
        android:text="@string/username"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/main_search_text_view_name"
        app:layout_constraintStart_toEndOf="@id/main_search_imageview_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/main_search_text_view_name"
        style="@style/InstaTextViewBase"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="@string/username"
        android:layout_marginStart="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_search_imageview_user"
        app:layout_constraintTop_toBottomOf="@+id/main_search_text_view_username"

        />



</androidx.constraintlayout.widget.ConstraintLayout>