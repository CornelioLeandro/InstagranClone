<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.presentation.MainActivity">

    <fragment
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.leandro.instagram.main.profile.presentation.ProfileFragment"
        tools:layout="@layout/fragment_main_profile"
        android:layout_above="@+id/main_bottom_nav"/>

<com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/nav_bottom_background"
        app:itemIconTint="@color/nav_icon_black"
        app:itemIconSize="28dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/menu_bottom_navigation"/>

</RelativeLayout>